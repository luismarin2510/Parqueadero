@page
@model Front.App.Presentacion.Pages.Saludo.Registrar
@{
    ViewData["Title"] = "Crear Usuario";
}

<h1>@ViewData["Title"]</h1>


<div class="container">
    <div class=" row">
        <div class="col-8 offset-2">
            <div class="text-info"> Crear Nuevo Usuario</div>

            <form method="POST">
                <div class="mb-3">
                    <label asp-for="personas.nombre" class="form-label"></label>
                    <input asp-for="personas.nombre" class="form-control"/>
                    <span asp-validation-for="personas.nombre" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="personas.apellido" class="form-label"></label>
                    <input asp-for="personas.apellido" class="form-control"/>
                    <span asp-validation-for="personas.apellido" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="personas.email" class="form-label"></label>
                    <input asp-for="personas.email" class="form-control"/>
                    <span asp-validation-for="personas.email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="personas.contraseña" class="form-label"></label>
                    <input asp-for="personas.contraseña" class="form-control" type="password"/>
                    <span asp-validation-for="personas.contraseña" class="text-danger"></span>
                </div>
                
                <button type="submit" class="btn btn-primary btn-block"> Crear Usuario</button>
            </form>

        </div>

    </div>
    <div class="row">
        <div class="col-6">
            <a asp-page="/Saludo/login" class="btn btn-success">Volver</a>
        </div>
    </div>

</div>
